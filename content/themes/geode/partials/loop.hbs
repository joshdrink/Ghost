{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}} card">
    <header class="post-header">
        <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" in "}}
    </footer>
</article>
{{/foreach}}
